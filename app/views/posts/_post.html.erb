
<%= link_to post_path(post) do %>
  <div class="card card-post mb-4 mx-2">
    <% if post.photos.size > 1 %>
      <%= render 'carousel_index', post: post %>
    <% elsif post.photos.size == 0 %>
      <%= image_tag "no_image.png", class: "d-block w-100 img-fluid", style: "width: 400px; height: 400px, crop: fill" %>
    <% else %>
      <%= cl_image_tag post.photos.first.key, class:"d-block w-100 img-fluid", alt:"...", height: 400, width: 400, crop: :fill %>
    <% end %>

    <div class="card-body d-flex flex-column justify-content-between">
      <div class="card-info d-flex justify-content-between">
        <h3 class="card-title text-truncate"><%= post.title %></h3>
        <h3 class="price"><%= post.price %>â‚¬</h3>
      </div>
      <div class='mb-3'>
        <h5>Description</h3>
        <div class="text-truncate text-truncate--2" style="height:48px;"> <%= simple_format(post.content) %></div>
      </div>
      <div class="card-footer">
        <div class="d-flex align-items-center justify-content-between">
          <small class="text-muted"> Created by <%= post.user.name %></small>
          <small class="text-muted" style="margin-left:auto"><%= "#{time_ago_in_words(post.created_at)} ago"%></small>
        </div>
        <div class="d-flex align-items-center justify-content-between">
          <small class="text-muted"> Updated</small>
          <small class="text-muted" style="margin-left:auto"><%= "#{time_ago_in_words(post.updated_at)} ago"%></small>
        </div>
      </div>
    </div>
  </div>
<% end %>