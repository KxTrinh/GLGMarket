
<%= link_to post_path(post) do %>
  <div class="card card-post mb-4 box-shadow mx-2">
    <% if post.photos.size > 1 %>
      <%= render 'carousel_index', post: post %>
    <% else %>
      <%= cl_image_tag post.photos.first.key, class:"d-block w-100", alt:"...", height: 200, width: 200, crop: :fill %>
    <% end %>

    <div class="card-body d-flex flex-column justify-content-between">
      <div class="card-info d-flex justify-content-between">
        <p class="card-text text-truncate"><%= post.title %></p>
        <p class="price"><%= post.price %>â‚¬</p>
      </div>
      <div>
        <p class="text-truncate text-truncate--2" style="height:48px;"> <%= post.content %></p>
      </div>
      <div class="d-flex align-items-center justify-content-between">
        <small class="text-muted"> Created by <%= post.user.name %></small>
        <small class="text-muted" style="margin-left:auto"><%= "#{time_ago_in_words(post.created_at)} ago"%></small>
      </div>
      <div class="d-flex align-items-center justify-content-between">
        <small class="text-muted"> Updated</small>
        <small class="text-muted" style="margin-left:auto"><%= "#{time_ago_in_words(post.updated_at)} ago"%></small>
      </div>
    </div>
  </div>
<% end %>