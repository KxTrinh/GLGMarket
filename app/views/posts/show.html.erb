<div class="container-show d-flex flex-column align-items-center my-3 my-3">
  <div class="post-show box-shadow">
    <div class="mb-4 box-shadow mx-2">
      <div id=<%= "#{@post.id}" %> class="carousel slide carousel-fade my-2">
        <div class="carousel-indicators">
          <button type="button" data-bs-target= <%= "##{@post.id}" %> data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
          <button type="button" data-bs-target= <%= "##{@post.id}" %> data-bs-slide-to="1" aria-label="Slide 2"></button>
          <button type="button" data-bs-target= <%= "##{@post.id}" %> data-bs-slide-to="2" aria-label="Slide 3"></button>
        </div>
        <div class="carousel-inner">
          <div class="carousel-item active">
            <img src="https://picsum.photos/id/10/1280/720" alt="...">
          </div>
          <div class="carousel-item">
            <img src="https://picsum.photos/id/111/1280/720" alt="...">
          </div>
          <div class="carousel-item">
            <img src="https://picsum.photos/id/318/1280/720" class="d-block w-100" alt="...">
          </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target=<%= "##{@post.id}" %> data-bs-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target=<%= "##{@post.id}" %> data-bs-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Next</span>
        </button>
      </div>

      <div class="post-show-content mx-3">

        <div>
          <h1><%= @post.title %></h1>
          <h3 class='price'><%= @post.price%> â‚¬</h3>
          <h3><%= @post.content %></h3>
        </div>

        <div class="d-flex align-items-center mt-3">
          <div class="btn-group">
            <%= link_to "Edit", edit_post_path(@post), class: "btn btn-sm btn-outline-secondary btn-edit" %>
          </div>
          <small class="text-muted" style="margin-left:auto"><%= "#{time_ago_in_words(@post.created_at)} ago"%></small>
        </div>

      </div>
    </div>
  </div>
</div>


